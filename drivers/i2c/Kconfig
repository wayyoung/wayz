if I2C

config I2C_N32
	bool "N32 I2C driver"
	default y
	select N32_HAL_I2C
	depends on DT_HAS_NSING_N32_I2C_ENABLED


config I2C_N32_INTERRUPT
	bool "N32 I2C Interrupt Support"
	default y
	depends on I2C_N32


config I2C_N32_COMBINED_INTERRUPT
	bool "N32 I2C combined interrupt support"
	depends on I2C_N32_INTERRUPT


config I2C_N32_BUS_RECOVERY
	bool "Bus recovery support"
	select I2C_BITBANG


endif