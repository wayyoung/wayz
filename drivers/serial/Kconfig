if SERIAL

config UART_N32
	bool "N32 MCU serial driver"
	default y
	depends on SERIAL
	depends on DT_HAS_NSING_N32_UART_ENABLED
	select SERIAL_SUPPORT_ASYNC
	select SERIAL_HAS_DRIVER
	select SERIAL_SUPPORT_INTERRUPT
	select N32_HAL_USART



endif # SERIAL